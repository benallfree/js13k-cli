{
  "name": "js13k-root",
  "private": true,
  "description": "A CLI for the js13kGames competition",
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0"
  },
  "scripts": {
    "js13k": "cd js13k && bun run js13k"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ],
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always",
    "semi": false,
    "printWidth": 120
  },
  "workspaces": [
    "js13k",
    "examples/*"
  ]
}
